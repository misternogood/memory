<li class='list'>
  <%= link_to creator_path(creator.id) do %>
  <div class='item-img-content'>
    <%= image_tag creator.image, class: "item-img" %>
  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= creator.name %>
    </h3>
    <div class="edit__btn">
    <%= link_to "編集", edit_creator_path, method: :get, class: :nav__btn  %>
    </div>
  </div>
  <% end %>
</li>