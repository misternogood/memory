<%= render "shared/header" %>
  <div class="main-title" >
    <div class="items-sell-contents">
      <div class="items-sell-main">
        <h2 class="items-sell-title">作者の情報を入力</h2>
        <%= form_with model: @creator, url:creators_path, local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="img-upload">
          <div class="weight-bold-text">
            作者画像
            <span class="indispensable">必須</span>
          </div>
          <div class="click-upload">
            <p>
              クリックしてファイルをアップロード
            </p>
            <%= f.file_field :image, id:"item-image",accept: 'image/jpg,image/jpeg,image/png,image/gif' %>
          </div>
        </div>
        <div class="new-items">
          <div class="weight-bold-text">
            作者名
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :name, class:"items-text", id:"name", placeholder:"作者名（必須 40文字まで)", maxlength:"40" %>
        </div>
        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birth_date,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: (Time.now.year),
                        end_year: 1930,
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
        <div class="sell-btn-contents">
          <%= f.submit "登録する" ,class:"sell-btn" %>
          <%=link_to 'もどる', user_path(current_user.id), class:"back-btn" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<%= render "shared/footer" %>