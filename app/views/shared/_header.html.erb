<header class="header">
  <div class="nav">
    <div class="nav__left">
      <%= link_to image_tag("logo.png", class: :logo), root_path %>
    </div>

    <% if user_signed_in? %>
      <div class="nav__right">
        <%= link_to "トップ", root_path, class: :top__btn %>
        <%= link_to "マイページ", user_path(current_user.id), class: :top__btn %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :top__btn %>
      </div>
    <% else %>
      <div class="nav__right">
        <%= link_to "ログイン", new_user_session_path, class: :top__btn %>
        <%= link_to "新規登録", new_user_registration_path, class: :top__btn %>
      </div> 
    <% end %>
  </div>
</header>